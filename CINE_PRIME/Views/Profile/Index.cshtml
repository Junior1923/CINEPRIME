@model CINE_PRIME.ViewModels.ProfileVM
@{
    ViewData["Title"] = "Mi Perfil";
}

@if (TempData["ProfileUpdated"] != null)
{
    <div class="alert alert-success text-center">
        @TempData["ProfileUpdated"]
    </div>
}

@if (TempData["NoChanges"] != null)
{
    <div class="alert alert-info text-center">
        @TempData["NoChanges"]
    </div>
}

<div class="container mt-5 text-light">

    <h1 class="mb-4 fw-bold">👤 Mi Perfil</h1>

    <!-- ============================
         BLOQUE 1: INFORMACIÓN GENERAL
         ============================ -->
    <div class="card bg-dark text-light mb-4 shadow-lg border-0">
        <div class="card-body d-flex flex-wrap align-items-center">

            <!-- Foto de perfil -->
            <div class="me-4 mb-3">
                <img src="@(!string.IsNullOrEmpty(Model.ImagenPerfil) ? Model.ImagenPerfil : "/img/default-avatar.png")"
                     class="rounded-circle shadow"
                     style="width: 140px; height:140px; object-fit: cover;" />
            </div>

            <!-- Info del usuario -->
            <div>
                <h3 class="fw-bold">@Model.Nombre @Model.Apellido</h3>
                <p class="text-info mb-1"><strong>Correo Electrónico:</strong> @Model.Correo</p>
                <p class="text-secondary mb-1"><strong>Miembro desde:</strong> @Model.FechaRegistro.ToShortDateString()</p>

                <div class="mt-3 d-flex gap-4">
                    <div>
                        <span class="h4 text-primary">@Model.CantFavoritos</span>
                        <p class="m-0 text-secondary">Favoritos</p>
                    </div>
                    <div>
                        <span class="h4 text-warning">@Model.CantPendientes</span>
                        <p class="m-0 text-secondary">Pendientes</p>
                    </div>
                </div>
            </div>

        </div>
    </div>


    <!-- ============================
         BLOQUE 2: EDITAR INFORMACIÓN
         ============================ -->
    <div class="card bg-dark text-light mb-4 shadow border-0">
        <div class="card-header bg-transparent border-secondary">
            <h4 class="mb-0">✏️ Editar información</h4>
        </div>
        <div class="card-body">

            <form asp-action="UpdateProfile" method="post" enctype="multipart/form-data">

                <input type="hidden" asp-for="UserId" />

                <div class="row">

                    <div class="col-md-6 mb-3">
                        <label asp-for="EditNombre" class="form-label"></label>
                        <input asp-for="EditNombre" class="form-control bg-secondary text-light" />
                        <span asp-validation-for="EditNombre" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="EditApellido" class="form-label"></label>
                        <input asp-for="EditApellido" class="form-control bg-secondary text-light" />
                        <span asp-validation-for="EditApellido" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="EditCorreo" class="form-label"></label>
                        <input asp-for="EditCorreo" class="form-control bg-secondary text-light" />
                        <span asp-validation-for="EditCorreo" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Cambiar foto</label>
                        <input type="file" name="profilePicture" class="form-control bg-secondary text-light" />
                    </div>

                </div>

                <button type="submit" class="btn btn-primary px-4 mt-3">Guardar cambios</button>
            </form>

        </div>
    </div>


    <!-- ============================
         BLOQUE 3: CAMBIO DE CONTRASEÑA
         ============================ -->
    <div class="card bg-dark text-light shadow border-0 mb-5">
        <div class="card-header bg-transparent border-secondary">
            <h4 class="mb-0">🔐 Cambiar contraseña</h4>
        </div>

        <div class="card-body">
            <form asp-action="ChangePassword" method="post">

                <input type="hidden" asp-for="UserId" />

                <div class="row">

                    <div class="col-md-4 mb-3">
                        <label asp-for="ContrasenaActual" class="form-label"></label>
                        <input asp-for="ContrasenaActual" class="form-control bg-secondary text-light" />
                        <span asp-validation-for="ContrasenaActual" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="NuevaContrasena" class="form-label"></label>
                        <input asp-for="NuevaContrasena" class="form-control bg-secondary text-light" />
                        <span asp-validation-for="NuevaContrasena" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="ConfirmarContrasena" class="form-label"></label>
                        <input asp-for="ConfirmarContrasena" class="form-control bg-secondary text-light" />
                        <span asp-validation-for="ConfirmarContrasena" class="text-danger"></span>
                    </div>

                </div>

                <button type="submit" class="btn btn-warning px-4 mt-3">Actualizar contraseña</button>

            </form>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
