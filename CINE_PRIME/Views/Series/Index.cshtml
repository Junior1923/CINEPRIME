@model IEnumerable<CINE_PRIME.Models.Tmdb.TmdbSeriesDTO>

@{
    ViewData["Title"] = "Series";
}

@section Styles {
    <link rel="stylesheet" href="~/css/series.css" />
    <link rel="stylesheet" href="~/css/hero-carousel.css" />
}

<div class="series-page container-fluid">
    <header class="series-header">
        <h2 class="series-main-title mb-4">Series Populares</h2>
    </header>


    <!-- HERO CARRUSEL PRIME VIDEO -->
    <div class="swiper hero-carousel mb-5">
        <div class="swiper-wrapper">

            @foreach (var serie in Model.Take(10))
            {
                <div class="swiper-slide hero-slide">
                    <img src="@($"https://image.tmdb.org/t/p/original{serie.BackdropPath}")" alt="@serie.Name" />

                    <div class="hero-gradient"></div>

                    <div class="hero-content">
                        <h2 class="hero-title">@serie.Name</h2>

                        <div class="hero-btns mt-4">
                            <a asp-controller="Series" asp-route-id="@serie.Id" asp-action="Details" class="btn btn-primary">Ver Más</a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Controles -->
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>

        <!-- Pagination dots -->
        <div class="swiper-pagination"></div>
    </div>




    <!-- Grid principal -->
    <div class="series-grid">
        @foreach (var s in Model)
        {
            var poster = $"https://image.tmdb.org/t/p/w500{s.PosterPath}";
            <article class="series-card">
                <a asp-action="Details" asp-route-id="@s.Id" class="series-link" title="@s.Name">
                    <div class="series-poster-wrap">
                        <img src="@poster" alt="@s.Name" loading="lazy" class="series-poster" />
                        <div class="series-hover">
                            <div class="hover-meta">
                                <h3 class="hover-title">@s.Name</h3>
                                <div class="hover-info">
                                    <span class="rating">⭐ @s.VoteAverage.ToString("0.0")</span>
                                    <span class="year">@DateTime.Parse(s.FirstAirDate).Year.ToString()</span>
                                </div>
                            </div>

                            <div class="hover-actions">
                                <a asp-action="Details" asp-route-id="@s.Id" class="btn btn-primary btn-sm">Ver detalles</a>
                            </div>
                        </div>
                    </div>
                </a>
                <div class="series-card-body">
                    <h4 class="card-title">@s.Name</h4>
                    <div class="card-sub">
                        <span class="small-meta">⭐ @s.VoteAverage.ToString("0.0")</span>
                        <span class="small-meta">•</span>
                        <span class="small-meta">@DateTime.Parse(s.FirstAirDate).ToString("dd/MM/yyyy")</span>
                    </div>
                </div>
            </article>
        }
    </div>
</div>

@section Scripts {
    <script src="~/js/hero-carousel.js"></script>
}
