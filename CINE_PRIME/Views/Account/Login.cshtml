@{
    ViewData["Title"] = "Login";
}

<h2>Iniciar Sesión</h2>

<form method="post" asp-action="Login" asp-controller="Account">
    <div class="mb-3">
        <label for="correo" class="form-label">Correo:</label>
        <input type="email" id="correo" name="correo" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="password" class="form-label">Contraseña:</label>
        <input type="password" id="password" name="password" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Ingresar</button>
</form>

<!-- Mostrar errores de validación o mensajes de login -->
@if (ViewData.ModelState.Values.SelectMany(v => v.Errors).Any())
{
    <div class="mt-3 text-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@error.ErrorMessage</div>
        }
    </div>
}

<hr />

<p>
    ¿No tienes cuenta?
    <a asp-controller="Account" asp-action="Register">Regístrate aquí</a>
</p>

<!-- Botón Volver Atrás -->
<a asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-2">Volver</a>
