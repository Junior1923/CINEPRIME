@{
    ViewData["Title"] = "Cerrar Sesión";
}

<div class="auth-bg">
    <div class="logout-card">
        <h2 class="text-light mb-4">¿Quieres cerrar sesión?</h2>

        <p class="text-muted mb-3">
            Estás conectado como:
            <strong class="text-accent">@ViewBag.Usuario</strong>
        </p>

        <form asp-action="LogoutConfirm" method="post" class="d-flex justify-content-center gap-3">
            <button type="submit" class="btn btn-danger px-4">Cerrar sesión</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light px-4">Cancelar</a>
        </form>
    </div>
</div>