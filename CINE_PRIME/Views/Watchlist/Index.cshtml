@model IEnumerable<(Guid listaId, CINE_PRIME.Models.Tmdb.TmdbMovieDTO Movie)>

@{
    ViewData["Title"] = "Mi Lista Pendiente";
}

<link rel="stylesheet" href="~/css/Wacht.css" />

<div class="watchlist-page">

    <h2 class="mb-4 text-light fw-bold" style="letter-spacing:1px;">
        🕒 Mi Lista Pendiente
    </h2>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-film text-secondary empty-icon" style="font-size: 4rem;"></i>
            <p class="text-light mt-3 empty-text" style="font-size: 1.2rem;">
                Tu watchlist está vacía…
                <span class="text-warning">empieza a llenarla con magia 🎬✨</span>
            </p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var data in Model)
            {
                <div class="col-6 col-md-4 col-lg-3 watch-wrapper">
                    <div class="card watch-card movie-card">

                        <div class="poster-container">
                            <img src="@($"https://image.tmdb.org/t/p/w500{data.Movie.PosterPath}")"
                                 alt="@data.Movie.Title"
                                 class="card-img-top" />

                            <span class="badge movie-rating">
                                ⭐ @data.Movie.VoteAverage.ToString("0.0")
                            </span>
                        </div>

                        <div class="card-body text-center">

                            <h5 class="card-title fw-semibold text-light text-truncate">
                                @data.Movie.Title
                            </h5>

                            <p class="text-secondary movie-date">
                                📅 @data.Movie.ReleaseDate
                            </p>

                            <a asp-controller="Movies"
                               asp-action="Details"
                               asp-route-id="@data.Movie.Id"
                               class="btn btn-sm btn-primary w-100 mb-2">
                                Ver detalles
                            </a>

                            <form asp-action="Remove" method="post" class="remove-form">
                                <input type="hidden" name="listaId" value="@data.listaId" />
                                <button type="submit" class="btn btn-sm btn-outline-danger w-100">
                                    Eliminar
                                </button>
                            </form>

                        </div>
                    </div>
                </div>
            }
        </div>
    }

</div> <!-- cierre watchlist-page -->
@section Scripts {
    <script src="~/js/Wacht.js"></script>
}
