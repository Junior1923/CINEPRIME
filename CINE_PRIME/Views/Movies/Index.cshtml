@model IEnumerable<CINE_PRIME.Models.Tmdb.TmdbMovieDTO>

@{
    ViewData["Title"] = "Películas Populares";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Index.css" />
}

<h2 class="page-title mb-4">🎬 Películas Populares</h2>

<div class="movie-grid">
    @foreach (var movie in Model)
    {
        <div class="movie-card">
            <div class="poster-wrapper">
                <img src="@($"https://image.tmdb.org/t/p/w500{movie.PosterPath}")"
                     alt="@movie.Title" class="movie-poster" />
                <div class="poster-overlay">
                    <a asp-action="Details" asp-route-id="@movie.Id" class="btn-view">
                        Ver detalles
                    </a>
                </div>
            </div>

            <div class="movie-info">
                <h4 class="movie-title">@movie.Title</h4>
                <p class="meta">
                    ⭐ @movie.VoteAverage.ToString("0.0")
                    ·
                    @movie.ReleaseDate
                </p>
            </div>
        </div>
    }
</div>
