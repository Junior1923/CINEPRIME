@model IEnumerable<(Guid FavId, CINE_PRIME.Models.Tmdb.TmdbMovieDTO Movie)>

@{
    ViewData["Title"] = "Mis Favoritos";
}

<link rel="stylesheet" href="~/css/Favorite.css" />

<div class="favorites-page">

    <h2 class="mb-4 text-light fw-bold" style="letter-spacing:1px;">
        ❤️ Mis Películas Favoritas
    </h2>

    @if (!Model.Any())
    {
        <div class="text-center py-6 empty-favorites">
            <div class="empty-art">🎞️</div>
            <p class="text-light mt-3 empty-text" style="font-size:1.15rem;">
                Aún no has agregado películas a tus favoritos.
                <span class="text-warning">Agrégalas desde cualquier película.</span>
            </p>

            <a asp-controller="Movies" asp-action="Index" class="btn btn-cta mt-3">Explorar Películas</a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var data in Model)
            {
                <div class="col-6 col-md-4 col-lg-3 fav-wrapper">
                    <div class="card fav-card movie-card">

                        <div class="poster-container">
                            <img src="@($"https://image.tmdb.org/t/p/w500{data.Movie.PosterPath}")"
                                 alt="@data.Movie.Title"
                                 class="card-img-top" />

                            <span class="badge movie-rating">
                                ⭐ @data.Movie.VoteAverage.ToString("0.0")
                            </span>

                           
                        </div>

                        <div class="card-body text-center">
                            <h5 class="card-title fw-semibold text-light text-truncate">
                                @data.Movie.Title
                            </h5>

                            <p class="text-secondary movie-date mb-3">
                                📅 @data.Movie.ReleaseDate
                            </p>

                            <a asp-controller="Movies"
                               asp-action="Details"
                               asp-route-id="@data.Movie.Id"
                               class="btn btn-sm btn-primary w-100 mb-2">
                                Ver detalles
                            </a>

                            <form asp-action="Remove" method="post" class="remove-form mb-0">
                                <input type="hidden" name="favoritoId" value="@data.FavId" />
                                <button type="submit" class="btn btn-sm btn-outline-danger w-100 btn-delete">
                                    Eliminar
                                </button>
                            </form>
                        </div>

                    </div>
                </div>
            }
        </div>
    }

</div> <!-- cierre favorites-page -->
@section Scripts {
    <script src="~/js/Favs.js"></script>
}
